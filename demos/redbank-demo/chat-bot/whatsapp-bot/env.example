# Environment variables for WhatsApp MCP Server

# Server Configuration
PORT=8080
LOG_LEVEL=info

# Database Configuration
WHATSAPP_DB_PATH=./whatsapp.db

# Media Configuration
WHATSAPP_MEDIA_DIR=./media
QR_CODE_DIR=./qr_codes

# Voice API Server Configuration
# Base URL for the voice-api-server that handles STT, TTS, and AI responses
VOICE_API_BASE_URL=http://localhost:8000

# Audio Conversion Configuration
# Convert OGG/Opus audio to WAV before sending to voice-api-server (default: enabled)
# Set to "true" to disable OGG to WAV conversion (send original format)
# DISABLE_OGG_TO_WAV_CONVERSION=false

# Optional: WhatsApp Configuration
# WHATSAPP_SESSION_NAME=default
# WHATSAPP_LOG_LEVEL=info
